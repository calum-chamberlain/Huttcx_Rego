<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huttcross.registration">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Sign_on">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MemberSignOn"
            android:label="@string/title_activity_member_sign_on"
            android:parentActivityName=".Sign_on"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.huttcross.registration.Sign_on" />
        </activity>
        <activity
            android:name=".NonMemberSignOn"
            android:label="@string/title_activity_non_member_sign_on"
            android:parentActivityName=".Sign_on"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.huttcross.registration.Sign_on" />
        </activity>
    </application>

</manifest>