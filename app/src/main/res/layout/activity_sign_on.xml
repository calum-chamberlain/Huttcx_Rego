<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.huttcross.registration.Sign_on">

    <Button
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/member_sign_on"
        android:onClick="memberSignOn"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/non_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/non_member_sign_on"
        android:onClick="nonmemberSignOn"
        android:layout_weight="1"
        android:layout_below="@id/member"
        android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adminUsage"
        android:text="ADMIN"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</LinearLayout>
